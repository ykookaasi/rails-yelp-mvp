<div class="container mt-5">
  <h1>Add a review for <%= @restaurant.name %></h1>
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
  <br>
  <%= link_to 'Jump back to list', restaurants_path %>
</div>
